<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <display-name>michelle-ers</display-name>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.enyawevia.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.enyawevia.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReimbursementServlet</servlet-name>
        <servlet-class>com.enyawevia.servlets.ReimbursementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReimbursementServlet</servlet-name>
        <url-pattern>/reimbursement/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PendingRequestsServlet</servlet-name>
        <servlet-class>com.enyawevia.servlets.PendingRequestsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PendingRequestsServlet</servlet-name>
        <url-pattern>/reimbursement/fetch/pending</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResolvedRequestsServlet</servlet-name>
        <servlet-class>com.enyawevia.servlets.ResolvedRequestsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResolvedRequestsServlet</servlet-name>
        <url-pattern>/reimbursement/fetch/resolved</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.enyawevia.servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReviewPendingRequestServlet</servlet-name>
        <servlet-class>com.enyawevia.servlets.manager.ReviewPendingRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReviewPendingRequestServlet</servlet-name>
        <url-pattern>/manager/review-request</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllEmployeesServlet</servlet-name>
        <servlet-class>com.enyawevia.servlets.manager.AllEmployeesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllEmployeesServlet</servlet-name>
        <url-pattern>/manager/employees</url-pattern>
    </servlet-mapping>

</web-app>